import random
num = random.randint(1,10) #generate random num between 1-10 inclusive
print("Random number has been generated")

while 1:
    print("Enter a number between 1 and 10 inclusive: ")
    unumber=input()
    unumber=int(unumber)
    
    if(num == unumber):
        print("Correct! Number is: {}".format(num))
        break
    else:
        print("Incorrect. Would you like to try again? (yes or no): ")
        answer = input()
        if(answer == "no"):
            break
print("Finished")
